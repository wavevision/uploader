  "scripts": {
    "build": "run-s webpack-clean webpack ts-declaration ts-declaration-all",
    "ci": "run-s ts eslint prettier stylelint test-all",
    "eslint": "eslint *.js *.ts src --cache --ext .js --ext .ts --ext .tsx",
    "eslint-clean": "rm -f .eslintcache",
    "eslint-fix": "yarn eslint --fix",
    "fix": "run-s ts eslint-fix prettier-fix stylelint-fix test-all",
    "postversion": "run-s postversion-push-tags postversion-publish postversion-push postversion-echo",
    "postversion-echo": "echo \"Successfully released version $npm_package_version!\"",
    "postversion-publish": "yarn publish --access public --new-version $npm_package_version",
    "postversion-push": "git push",
    "postversion-push-tags": "yarn postversion-push --tags",
    "prepare": "npm run build",
    "prettier": "prettier '**/*.{css,js,scss,ts,tsx}' --check",
    "prettier-fix": "yarn prettier --write",
    "preversion": "yarn fix",
    "storybook": "start-storybook",
    "stylelint": "stylelint src/**/*.{css,scss}",
    "stylelint-fix": "yarn stylelint --fix",
    "test": "yarn test-all -o",
    "test-all": "cross-env NODE_ENV=test jest",
    "test-all-clean": "run-s test-clean test-all",
    "test-clean": "rm -rf temp/cache/jest",
    "test-coverage": "yarn test-all --coverage || true",
    "ts": "tsc --project tsconfig.json",
    "ts-declaration": "dts-bundle-generator --config dts.config.js",
    "ts-declaration-all": "cp dist/index.d.ts dist/all.d.ts",
    "webpack": "cross-env TS_NODE_PROJECT='webpack/tsconfig.json' TS_NODE_TRANSPILE_ONLY=true NODE_ENV=production webpack --config webpack/webpack.config.ts",
    "webpack-clean": "rm -rf dist/*"
  }
}
